<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context="com.anantya.watchsensor.SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewWatchIdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watch Id" />

            <EditText
                android:id="@+id/editTextWatchId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Watch Id"
                android:inputType="textShortMessage"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <CheckBox
                android:id="@+id/checkBoxTrackingEnabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tracking Enabled"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorLight"
                tools:text="Tracking Enabled" />

            <CheckBox
                android:id="@+id/checkBoxHeartRateActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Heart Rate Active"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorLight" />

            <CheckBox
                android:id="@+id/checkBoxGPSActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="GPS Active"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorLight" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewVersionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version" />

            <TextView
                android:id="@+id/textViewVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
